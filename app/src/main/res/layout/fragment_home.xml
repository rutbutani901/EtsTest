<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/firstRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                />


            <com.jackandphantom.carouselrecyclerview.CarouselRecyclerview
                android:id="@+id/carsRecyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/firstRecycler"
                app:layout_constraintEnd_toEndOf="parent"

                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/shopText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Shop By Category"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"

                android:layout_marginTop="@dimen/_10sdp"

                app:layout_constraintTop_toBottomOf="@id/carsRecyclerview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shopRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/shopText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/shopFabic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Shop By Fabric Material"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"

                android:layout_marginTop="@dimen/_10sdp"

                app:layout_constraintTop_toBottomOf="@id/shopRecycler"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fabricRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/shopFabic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/unStictchedTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Unstitched"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"

                android:layout_marginTop="@dimen/_10sdp"

                app:layout_constraintTop_toBottomOf="@id/fabricRecycler"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <com.jackandphantom.carouselrecyclerview.CarouselRecyclerview
                android:id="@+id/unStictchedRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/unStictchedTxt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/botiquesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Botique Collection"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"

                android:layout_marginTop="@dimen/_10sdp"

                app:layout_constraintTop_toBottomOf="@id/unStictchedRecycler"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/botiqueRecycler"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"

                android:layout_marginTop="@dimen/_10sdp"

                app:layout_constraintTop_toBottomOf="@id/botiquesText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

            </androidx.recyclerview.widget.RecyclerView>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/patternText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Range Of Pattern"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"

                android:layout_marginTop="@dimen/_10sdp"

                app:layout_constraintTop_toBottomOf="@id/botiqueRecycler"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/patternRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/patternText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/occasionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Design As Per Occassion"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"

                android:layout_marginTop="@dimen/_10sdp"

                app:layout_constraintTop_toBottomOf="@id/patternRecycler"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/occasionRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/occasionText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>